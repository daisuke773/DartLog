@page
@model RegisterModel
@{
    ViewData["Title"] = "アカウント登録";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 420px; border-radius: 1rem;">
        <div class="text-center mb-4">
            <div class="mb-2" style="font-size: 2.5rem; color: #14213d;">
                <i class="bi bi-bullseye"></i>
            </div>
            <h2 class="fw-bold">アカウント登録</h2>
            <p class="text-muted">DartLog を利用するためのユーザ情報を入力してください</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- メールアドレス -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">メールアドレス</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- パスワード -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">パスワード</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- パスワード（確認） -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">パスワード（確認）</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- 登録ボタン -->
            <button id="registerSubmit" type="submit" class="btn w-100 text-white"
                    style="background-color:#14213d; border-radius:0.8rem;">
                アカウントを作成する
            </button>

            <div class="mt-4 text-center">
                <p class="mb-0">
                    すでにアカウントをお持ちの場合は、
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                        ログイン画面へ
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
