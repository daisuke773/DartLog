@page
@model IndexModel
@{
    ViewData["Title"] = "アカウント設定";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 520px; border-radius: 1rem;">

        <!-- ヘッダ -->
        <div class="text-center mb-4">
            <div class="mb-2" style="font-size: 2.5rem; color: #14213d;">
                <i class="bi bi-person-circle"></i>
            </div>
            <h2 class="fw-bold">アカウント設定</h2>
            <p class="text-muted mb-0">ユーザー情報の確認・変更を行います</p>
        </div>

        <!-- ステータスメッセージ（更新完了など） -->
        <div class="mb-3">
            <partial name="_StatusMessage" for="StatusMessage" />
        </div>

        <!-- プロフィールフォーム -->
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- ユーザー名 -->
            <div class="form-floating mb-3">
                <input asp-for="Username"
                       class="form-control"
                       placeholder="ユーザー名"
                       disabled />
                <label asp-for="Username" class="form-label">ユーザー名</label>
            </div>

            <!-- 電話番号 -->
            <div class="form-floating mb-4">
                <input asp-for="Input.PhoneNumber"
                       class="form-control"
                       placeholder="電話番号を入力してください" />
                <label asp-for="Input.PhoneNumber" class="form-label">電話番号</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- 保存ボタン -->
            <button id="update-profile-button"
                    type="submit"
                    class="btn w-100 text-white"
                    style="background-color:#14213d; border-radius:0.8rem;">
                変更を保存する
            </button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
