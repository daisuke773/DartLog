@page
@model LoginModel
@{
    ViewData["Title"] = "ログイン";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 420px; border-radius: 1rem;">
        <div class="text-center mb-4">
            <div class="mb-2" style="font-size: 2.5rem; color: #14213d;">
                <i class="bi bi-bullseye"></i>
            </div>
            <h2 class="fw-bold">ログイン</h2>
            <p class="text-muted">アカウント情報を入力してください</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- メールアドレス -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">メールアドレス</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- パスワード -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                <label asp-for="Input.Password">パスワード</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- ログイン状態を保持 -->
            <div class="mb-3 form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">
                    ログイン状態を保持する
                </label>
            </div>

            <!-- ログインボタン -->
            <button id="login-submit" type="submit" class="btn w-100 text-white"
                    style="background-color:#14213d; border-radius:0.8rem;">
                ログイン
            </button>

            <!-- リンク -->
            <div class="mt-4 text-center">
                <p class="mb-1">
                    <a asp-page="./ForgotPassword" class="text-decoration-none">パスワードを忘れた場合</a>
                </p>
                <p class="mb-0">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                        アカウントを作成する
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
