@page
@model IndexModel
@{
    ViewData["Title"] = "ホーム";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-5">
    <h1 class="text-center mb-4 fw-bold">DartLog</h1>
    <p class="text-center text-muted mb-5">
        ダーツスコア管理アプリ
    </p>

    <div class="row g-4 justify-content-center">

        <!-- ゲーム開始 -->
        <div class="col-10 col-md-4 col-lg-3">
            <a asp-page="/Games/Start" class="text-decoration-none">
                <div class="card h-100 shadow-sm card-hover">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-play-circle-fill display-4 text-success"></i>
                        <h5 class="mt-3 fw-bold text-dark">ゲーム開始</h5>
                        <p class="text-muted small mb-0">CountUp をすぐにプレイ</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- ゲーム履歴 -->
        <div class="col-10 col-md-4 col-lg-3">
            <a asp-page="/Games/Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm card-hover">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-clock-history display-4 text-info"></i>
                        <h5 class="mt-3 fw-bold text-dark">ゲーム履歴</h5>
                        <p class="text-muted small mb-0">過去のスコアを確認</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- グループ管理 -->
        <div class="col-10 col-md-4 col-lg-3">
            <a asp-page="/Groups/Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm card-hover">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-people-fill display-4 text-primary"></i>
                        <h5 class="mt-3 fw-bold text-dark">グループ管理</h5>
                        <p class="text-muted small mb-0">グループを作成・編集</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>

