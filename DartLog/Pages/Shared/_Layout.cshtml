<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DartLog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DartLog.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-page="/Index">DartLog</a>

        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <span class="navbar-text me-3">
                            @User.Identity.Name さん
                        </span>
                    </li>

                    <li class="nav-item me-2">
                        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index">
                            アカウント設定
                        </a>
                    </li>

                    <li class="nav-item">
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                            <button type="submit" class="btn btn-outline-light btn-sm">
                                ログアウト
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">
                            ログイン
                        </a>
                    </li>
                }

            </ul>
        </div>
    </div>
</nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DartLog - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>